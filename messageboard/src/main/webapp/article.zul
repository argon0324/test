<grid left="@load(left)px">
	<auxhead>
		<auxheader colspan="2" label="${labels.topic}" />
	</auxhead>
	<columns>
		<column align="right" hflex="min" />
		<column />
	</columns>
	<rows>
		<row>
			<cell sclass="row-title">${labels.title} :</cell>
			<cell>
				<label value="@load(article.title)" />
			</cell>
		</row>
		<row>
			<cell sclass="row-title">${labels.author} :</cell>
			<cell>
				<label value="@load(article.user.name)" />
			</cell>
		</row>
		<row>
			<cell sclass="row-title">${labels.date} :</cell>
			<cell>
				<label value="@load(article.date)" />
			</cell>
		</row>
		<row>
			<cell sclass="row-title">${labels.tags} :</cell>
			<cell>
				<label value="@load(article.tags)" />
			</cell>
		</row>
		<row>
			<cell sclass="row-title">${labels.content} :</cell>
			<cell>
				<html content="@load(article.content)" />
			</cell>
		</row>
		<row>
			<cell />
			<cell>
				<button label="${labels.reply}"
					onClick="@command('reply', article = article)" />
				<button
					visible="@load((empty article.replies) and (vm.currentUser.uid eq article.user.uid))"
					label="${labels.edit}"
					onClick="@command('edit',  article = article)" />
				<button
					visible="@load(vm.currentUser.uid eq article.user.uid)"
					label="${labels.delete}"
					onClick="@command('delete',  article = article)" />
				<button label="${labels.close}"
					onClick="@command('close')" />
			</cell>
		</row>
	</rows>
</grid>